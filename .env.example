# GARUDAI Backend Environment Variables
# Copy this file to .env for local development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Main Database)
POSTGRES_DB=agent_observability_metadata
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/agent_observability_metadata

# TimescaleDB (Time-Series Metrics)
TIMESCALE_DB=agent_observability
TIMESCALE_USER=postgres
TIMESCALE_PASSWORD=postgres
TIMESCALEDB_URL=postgresql://postgres:postgres@localhost:5433/agent_observability

# Redis (Caching & Rate Limiting)
REDIS_PASSWORD=redis123
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# SERVICE URLs (Internal Networking - for Docker Compose)
# =============================================================================

# Gateway Service
GATEWAY_URL=http://gateway:8000
GATEWAY_PORT=8000

# Query Service
QUERY_URL=http://query:8001
QUERY_PORT=8001

# Evaluation Service
EVALUATION_URL=http://evaluation:8002
EVALUATION_PORT=8002

# Guardrail Service
GUARDRAIL_URL=http://guardrail:8003
GUARDRAIL_PORT=8003

# Alert Service
ALERT_URL=http://alert:8004
ALERT_PORT=8004

# Gemini Service
GEMINI_URL=http://gemini:8005
GEMINI_PORT=8005

# Ingestion Service
INGESTION_URL=http://ingestion:8006
INGESTION_PORT=8006

# Processing Service
PROCESSING_URL=http://processing:8007
PROCESSING_PORT=8007

# =============================================================================
# API KEYS & SECRETS
# =============================================================================

# LLM Provider API Keys
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# JWT Configuration (REQUIRED - Generate secure random strings)
JWT_SECRET=your-secret-key-here-min-32-characters
API_KEY_SALT=your-api-key-salt-here-min-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Encryption Key (for sensitive data)
ENCRYPTION_KEY=your_encryption_key_here_min_32_chars

# =============================================================================
# CORS & SECURITY
# =============================================================================

# Frontend URLs (for CORS)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment
ENVIRONMENT=development

# Log Level
LOG_LEVEL=INFO

# Enable Debug Mode
DEBUG=false

# =============================================================================
# PRODUCTION CONFIGURATION (Railway/GCP)
# =============================================================================
# For Railway deployment, uncomment and configure these:

# Database URLs (Railway provides these as environment variables)
# DATABASE_URL=${DATABASE_URL}
# TIMESCALEDB_URL=${TIMESCALEDB_URL}
# REDIS_URL=${REDIS_URL}

# Frontend URL (Vercel deployment)
# CORS_ORIGINS=https://garudai.vercel.app,https://garudai.app

# Service URLs (Railway internal networking)
# GATEWAY_URL=https://garudai-gateway.up.railway.app
# QUERY_URL=http://query.railway.internal:8001
# EVALUATION_URL=http://evaluation.railway.internal:8002
# GUARDRAIL_URL=http://guardrail.railway.internal:8003
# ALERT_URL=http://alert.railway.internal:8004
# GEMINI_URL=http://gemini.railway.internal:8005
# INGESTION_URL=http://ingestion.railway.internal:8006
# PROCESSING_URL=http://processing.railway.internal:8007

# Production Secrets (IMPORTANT: Use strong random values!)
# JWT_SECRET=$(openssl rand -hex 32)
# API_KEY_SALT=$(openssl rand -hex 32)
# ENCRYPTION_KEY=$(openssl rand -hex 32)
